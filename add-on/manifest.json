{

  "description": "Siguranta - An Anti-Phising Plugin proof of concept by Anvil Ventures",
  "manifest_version": 2,
  "name": "Siguranta - Anti-Phising Plugin (poc)",
  "version": "1.0",
  "icons": {
    "48": "anvil.png"
  },

  "applications": {
    "gecko": {
      "id": "siguranta@anvilventures.com",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "anvil.png"
  },
  
  "permissions": ["nativeMessaging", "activeTab", "<all_urls>"]

}
