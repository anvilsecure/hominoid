{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "src/*"
            ]
        },
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "dist/js",
        "strict": true,
        "sourceMap": true,
        "jsx": "react",
        "esModuleInterop": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
}
