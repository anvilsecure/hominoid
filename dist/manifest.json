{
    "manifest_version": 2,
    "name": "Hominoid",
    "description": "Hominoid - An Anti-Phising Plugin proof of concept by Anvil Ventures",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": "icon-32.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/backgroundPage.js"
        ]
    },
    "icons": {
        "32": "icon-32.png"
    },
    "permissions": [
        "<all_urls>",
        "downloads",
        "tabs",
        "storage",
        "activeTab",
        "notifications",
        "http://*/",
        "https://*/"
    ]
}